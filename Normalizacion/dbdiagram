Table Sucrusales{
  numero_sucursal int PK
  calle varchar
  numero int 
  ciudad nvarchar(30)
  estado nvarchar(30)
}

Table Clientes{
  correo nvarchar(30) PK
  nombre nvarchar(30)
  apellido_paterno nvarchar(30)
  apellido_materno nvarchar(30)
  puntos int
  calle nvarchar(30)
  numero int
  estado nvarchar(30)
  ciudad nvarchar(30)
  telefono nvarchar(14)
  numero_sucursal int 
}

Table Empleados{
  rfc nchar(13) PK
  nombre nvarchar(30)
  apellido_paterno nvarchar(30)
  apellido_materno nvarchar(30)
  curp nchar(18)
  tipo_sangre nchar(2)
  fecha_nacimiento date
  calle nvarchar(30)
  numero int
  estado nvarchar(30) 
  ciudad nvarchar(30)
  cuenta_bancaria nvarchar(30)
  numero_seguro integer
  tipo_transporte nvarchar(20)
  licencia nvarchar(20)
}

Table EmpleadosSucursal {
  rfc nchar(13) PK
  numero_sucursal int PK
  salario money
  tipo_empleado nvarchar(30)
  bonos money
  fecha_contratacion datetime
}

Table Vendedores {
  rfc nchar(12) PK
  nombre nvarchar(30)
  telefono nvarchar(14)
}

Table MateriaPrima{
  id_articulo int PK
  nombre nvarchar(30) 
  tipo nvarchar(10)
}

Table Inventarios{
  id_articulo int PK
  numero_sucursal int PK
  fecha_compra datetime PK
  precio_unitario money
  cantidad int 
  fecha_caducidad datetime 
  rfc_provedor nchar(12)
}

Table Tipo {
  id_tipo int PK
  nombre nvarchar(20)
}

Table Platillos{
  id_platillo int PK
  id_tipo int
  nombre nvarchar(40)
}

Table IngredientesPlatillo{
  id_platillo int PK
  id_articulo int PK
  cantidad float
}

Table IngredientesSalsa{
  nombre_salsa nvarchar(20) PK
  id_articulo int PK
  cantidad float
}

Table Precios{
  id_platillo int PK
  fecha datetime PK
  precio money
}

Table Salsas {
  nombre nvarchar(20) PK
  picor nvarchar(20)
}

Table Recomendaciones {
  id_platillo int PK
  nombre_salsa nvarchar(20) PK
}

Table PresentacionSalsas {
  nombre_salsa nvarchar(20) PK
  tamanio nvarchar(10) PK
}

Table PreciosSalsas {
  nombre_salsa nvarchar(20) PK
  tamanio nvarchar(10) PK
  fecha date 
  precio money
}

Table Pedidos{
  numero_ticket int PK
  numero_sucursal int
  metodo_pago nvarchar(10)
  no_mesa int 
  fecha datetime
  correo_cliente nvarchar(30) 
}

Table Promociones {
  id_promocion int PK
  tipo_descuento nvarchar(30)
  dia int
  tipo_producto int
}

Table PlatillosPedido {
  numero_ticket int PK
  id_platillo int PK
}

Table SalsasPedido {
  numero_ticket int PK
  nombre_salsa nvarchar(20) PK
  tamanio nvarchar(10) PK
}

Table PromocionesPedido {
  numero_ticket int PK
  id_promocion int PK
}

